@model CourseWork.Models.Course

@{
    ViewData["Title"] = "Деталі курсу";
}

<h2>@Model.Title</h2>
<p><strong>Опис:</strong> @Model.Description</p>
<p><strong>Категорія:</strong> @Model.Category.Name</p>
<p><strong>Рівень:</strong> @Model.Level.Name</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="mt-3">
    <form method="post" asp-action="Enroll" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-primary">Записатись</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
