@{
    ViewData["Title"] = "Вхід до системи";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form method="post" asp-controller="Auth" asp-action="Login">
            <div class="form-group mb-3">
                <label for="email">Електронна пошта</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Введіть email" required>
            </div>

            <div class="form-group mb-3">
                <label for="password">Пароль</label>
                <input type="password" class="form-control" id="password" name="Password" placeholder="Введіть пароль" required>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p>Ще не зареєстровані? <a asp-action="Register">Зареєструватися</a></p>
        </div>
    </div>
</div>
